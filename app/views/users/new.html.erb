<% provide(:title, "Sign up") %>
<h1>Sign up</h1>
<div calss="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render  'shared/error_messages'%>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :date_of_birth %><br>
      <%= f.date_select :date_of_birth,
                        {
                          order: [:day, :month, :year],
                          start_year: 1900,
                          end_year: Date.today.year,
                          default: Date.new(2000, 1, 1)
                        },
                        {class: 'form-control bootstrap-date'} %><br>

      <p class="form-label">Sex</p>
      <label class="radio-inline">
        <%= f.radio_button :sex, "male", {checked: true} %>male
      </label>
      <label class="radio-inline">
        <%= f.radio_button :sex, "female" %>female
      </label><br>

      <%= f.label :height, "Height(m)" %>
      <%= f.number_field :height, in: 0.50..3.00, step: 0.01,
                                  class: 'number_form form-control' %>

      <%= f.label :weight, "Weight(kg)" %>
      <%= f.number_field :weight, in: 10..1000, step: 1,
                                  class: 'number_form form-control' %>

      <%= f.label :strength %>
      <%= f.select :strength, [1,2,3], {}, {class: 'number_form form-control'} %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control'  %>

      <%= f.submit "Create new account", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
